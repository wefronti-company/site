{
  "name": "wefronti",
  "private": true,
  "workspaces": [
    "site",
    "dashboard",
    "console"
  ],
  "scripts": {
    "dev": "concurrently -k -n site,dashboard,console \"npm run dev:site\" \"npm run dev:dashboard\" \"npm run dev:console\"",
    "dev:site": "npm --workspace site run dev",
    "dev:dashboard": "npm --workspace dashboard run dev",
    "dev:console": "npm --workspace console run dev",
    "build": "npm --workspaces run build",
    "start": "npm --workspaces run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
